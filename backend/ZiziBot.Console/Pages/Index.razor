@page "/"

<PageTitle>ZiziBot Console</PageTitle>
<RadzenRow Gap="5" RowGap="5">
    <RadzenColumn Size="12">
        <RadzenText Text="Welcome to ZiziBot Console" TextStyle="TextStyle.DisplayH2" TagName="TagName.Auto"></RadzenText>
        <RadzenText Text="Take ZiziBot under your control" TextStyle="TextStyle.H4" TagName="TagName.H2" class="mt-5"></RadzenText>
        <RadzenText Text="With Console you can manage configuration, notes and other for ZiziBot." TextStyle="TextStyle.Body1" TagName="TagName.Auto" class="mt-4" Style="font-size: 20px; line-height: 24px"></RadzenText>
        <RadzenText Text="Click menu what do you want." TextStyle="TextStyle.Body1" TagName="TagName.Auto" class="mt-3" Style="font-size: 20px; line-height: 24px"></RadzenText>
        <RadzenCard Style="margin-top: 40px; padding: 20px 40px 40px;">
            <RadzenRow>
                <RadzenColumn Size="12" SizeMD="4">
                    <RadzenIcon Icon="chat" Style="margin-top: 20px; width: 48px; height: 48px; font-size: 48px; color: var(--rz-text-title-color);"></RadzenIcon>
                    <RadzenText Text="Chat Management" TextStyle="TextStyle.DisplayH6" TagName="TagName.H3"></RadzenText>
                    <RadzenLink Text="Notes" Path="/notes" Icon="east" Style="font-size: 18px"></RadzenLink>
                    <RadzenLink Text="RSS" Path="/rss" Icon="east" Style="display: block; font-size: 18px"></RadzenLink>
                </RadzenColumn>
                <RadzenColumn Size="12" SizeMD="4">
                    <RadzenIcon Icon="group" Style="margin-top: 20px; width: 48px; height: 48px; font-size: 48px; color: var(--rz-text-title-color);"></RadzenIcon>
                    <RadzenText Text="Group Management" TextStyle="TextStyle.DisplayH6" TagName="TagName.H3"></RadzenText>
                    <RadzenLink Text="Welcome Message" Path="/welcome-message" Icon="east" Style="font-size: 18px"></RadzenLink>
                    <RadzenLink Text="Night Mode" Path="/night-mode" Icon="east" Style="display: block;font-size: 18px"></RadzenLink>
                </RadzenColumn>
                <RadzenColumn Size="12" SizeMD="4">
                    <RadzenIcon Icon="people_outline" Style="margin-top: 20px; width: 48px; height: 48px; font-size: 48px; color: var(--rz-text-title-color);"></RadzenIcon>
                    <RadzenText Text="Support" TextStyle="TextStyle.DisplayH6" TagName="TagName.H3"></RadzenText>
                    <RadzenLink Text="WinTenDev Support" Path="https://t.me/WinTenDevSupport" Icon="east" Target="_blank" Style="font-size: 18px"></RadzenLink>
                    <RadzenLink Text="Playground (beta tester)" Path="https://t.me/TgBotID" Icon="east" Target="_blank" Style="display: block;font-size: 18px"></RadzenLink>
                </RadzenColumn>
            </RadzenRow>
        </RadzenCard>
    </RadzenColumn>
</RadzenRow>