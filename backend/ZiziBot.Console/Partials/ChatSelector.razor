@using ZiziBot.Common.Dtos
@inherits WebComponentBase<ChatSelectorViewModel>

<RadzenText>Pilih Obrolan:</RadzenText>

@if (SelectorMode == SelectorMode.List)
{
<RadzenListBox @bind-Value="SelectedChatId"
               Change="OnValueChanged"
               Data="ListChat"
               LoadData="OnLoadData"
               Style="width: 100%; height: calc(100% - 32px);"
               TextProperty="ChatTitle"
               TValue="long"
               ValueProperty="ChatId">
        <Template>
            @((context as ChatInfoDto).ChatTitle)
        </Template>
    </RadzenListBox>
}
else
{
<RadzenDropDown @bind-Value="SelectedChatId"
                Change="OnValueChanged"
                Data="ListChat"
                LoadData="OnLoadData"
                Style="width: 100%;"
                TextProperty="ChatTitle"
                TValue="long"
                ValueProperty="ChatId">
        <Template>
            @((context as ChatInfoDto).ChatTitle)
        </Template>
    </RadzenDropDown>
}